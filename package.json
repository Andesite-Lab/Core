{
  "$schema": "https://json.schemastore.org/package",
  "name": "@andesite-lab/andesite-core",
  "version": "1.5.1",
  "description": "Andesite - Core allows you to create a new microservice with ease. It provides a set of tools to help you build a new microservice.",
  "main": "Build/lib.js",
  "types": "Build/lib.d.ts",
  "type": "module",
  "bin": {
    "andesite": "Build/cli.js"
  },
  "scripts": {
    "clear": "if [ -f tsconfig.tsbuildinfo ]; then rm tsconfig.tsbuildinfo; fi && if [ -d Build ]; then rm -rf Build; fi",
    "create-types": "tsc --emitDeclarationOnly && tsc-alias",
    "build": "npm run clear && tsc --noEmit && npm run create-types && node ./Configs/esbuild.config.package build",
    "dev::build": "npm run clear && node ./Configs/esbuild.config.package build",
    "user::build": "node ./Configs/esbuild.config.user.js build",
    "docs": "typedoc",
    "fix-lint": "eslint --fix . --ext .ts",
    "lint": "eslint . --ext .ts",
    "test:watch": "jest --watch -c jest.config.json",
    "test": "jest -c jest.config.json --ci --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Andesite-Lab/Core.git"
  },
  "bugs": {
    "url": "https://github.com/Andesite-Lab/Core/issues"
  },
  "homepage": "https://github.com/Andesite-Lab/Core#readme",
  "keywords": [
    "andesite",
    "andesite-lab",
    "andesite-core",
    "core"
  ],
  "author": "Ruby",
  "license": "MIT",
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.10",
    "@types/node": "^20.14.5",
    "@types/pg": "^8.11.6",
    "@types/tedious": "4.0.9",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "better-sqlite3": "^9.6.0",
    "esbuild": "^0.21.5",
    "eslint": "^8.57.0",
    "eslint-plugin-tsdoc": "^0.2.17",
    "jest": "^29.7.0",
    "pg": "^8.12.0",
    "tarn": "^3.0.2",
    "tedious": "17.0.0",
    "ts-jest": "^29.1.5",
    "tsc-alias": "^1.8.10",
    "tslib": "^2.6.3",
    "typedoc": "^0.25.13",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@basalt-lab/basalt-logger": "^1.6.2",
    "@clack/prompts": "^0.7.0",
    "@fastify/cors": "^9.0.1",
    "@fastify/formbody": "^7.4.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/swagger": "^8.14.0",
    "@scalar/fastify-api-reference": "^1.24.11",
    "@vinejs/vine": "^2.1.0",
    "ajv-errors": "^3.0.0",
    "ajv-formats": "^3.0.1",
    "commander": "^12.1.0",
    "fast-querystring": "^1.1.2",
    "fastify": "^4.28.0",
    "i18next": "^23.11.5",
    "kysely": "^0.27.3",
    "source-map-support": "^0.5.21",
    "yaml": "^2.4.5"
  }
}
