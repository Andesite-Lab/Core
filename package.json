{
  "$schema": "https://json.schemastore.org/package",
  "name": "@andesite-lab/andesite-core",
  "description": "Andesite - Core provides a set of tools to help you build a microservice",
  "version": "1.24.2",
  "type": "module",
  "main": "build/lib.js",
  "types": "build/lib.d.ts",
  "bin": {
    "andesite": "build/cli.js"
  },
  "scripts": {
    "dev": "bun --watch source/index.ts",
    "build": "NODE_ENV=production bun bundler.config.ts && tsc && tsc-alias",
    "start": "NODE_ENV=production bun build/index.js",
    "test": "bun test",
    "user::build": "node ./config/esbuild.user.config.js build",
    "docs": "typedoc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Andesite-Lab/Core.git"
  },
  "bugs": {
    "url": "https://github.com/Andesite-Lab/Core/issues"
  },
  "homepage": "https://github.com/Andesite-Lab/Core#readme",
  "keywords": [
    "andesite",
    "andesite-lab",
    "andesite-core",
    "core"
  ],
  "author": "Ruby",
  "license": "MIT",
  "dependencies": {
    "@basalt-lab/basalt-helper": "^1.7.2",
    "@basalt-lab/basalt-logger": "^1.8.2",
    "@clack/prompts": "^0.7.0",
    "@fastify/cors": "^9.0.1",
    "@fastify/formbody": "^7.4.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/swagger": "^8.15.0",
    "@scalar/fastify-api-reference": "^1.25.7",
    "@vinejs/vine": "^2.1.0",
    "ajv-errors": "^3.0.0",
    "ajv-formats": "^3.0.1",
    "commander": "^12.1.0",
    "fast-querystring": "^1.1.2",
    "fastify": "^4.28.1",
    "fastify-print-routes": "^3.2.0",
    "fluent-json-schema": "^5.0.0",
    "i18next": "^23.14.0",
    "ioredis": "^5.4.1",
    "knex": "^3.1.0",
    "source-map-support": "^0.5.21"
  },
  "devDependencies": {
    "@types/bun": "^1.1.8",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "esbuild": "^0.23.1",
    "eslint": "^8.57.0",
    "eslint-plugin-tsdoc": "^0.3.0",
    "tsc-alias": "^1.8.10",
    "typedoc": "^0.26.6"
  },
  "peerDependencies": {
    "typescript": "^5.5.4"
  }
}